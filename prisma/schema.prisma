// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  PENDING
  PAID
  FAILED
}

model Category {
  id        String    @id @default(cuid())
  name      String
  slug      String    @unique

  products  Product[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Product {
  id         String       @id @default(cuid())
  title      String
  slug       String       @unique
  price      Int
  stock      Int          @default(0)
  imageUrl   String?
  active     Boolean      @default(true)

  categoryId String?
  category   Category?    @relation(fields: [categoryId], references: [id], onDelete: SetNull, onUpdate: Cascade)

  cartItems  CartItem[]
  orderItems OrderItem[]

  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt

  @@index([categoryId])
}

model Cart {
  /// شناسهٔ سبد همان مقداری است که در کوکی ذخیره می‌شود
  id        String    @id
  items     CartItem[]

  createdAt DateTime  @default(now())
}

model CartItem {
  id        String   @id @default(cuid())

  cartId    String
  cart      Cart     @relation(fields: [cartId], references: [id], onDelete: Cascade)

  productId String
  product   Product  @relation(fields: [productId], references: [id])

  quantity  Int      @default(1)
  createdAt DateTime @default(now())

  @@unique([cartId, productId], name: "cartId_productId")
  @@index([cartId])
}

model Order {
  id        String       @id @default(cuid())
  createdAt DateTime     @default(now())

  email     String
  name      String
  address   String
  note      String?

  total     Int
  status    OrderStatus  @default(PENDING)

  items     OrderItem[]
}

model OrderItem {
  id        String   @id @default(cuid())

  orderId   String
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)

  productId String
  product   Product  @relation(fields: [productId], references: [id])

  quantity  Int
  price     Int      // snapshot قیمت در لحظه سفارش
}
